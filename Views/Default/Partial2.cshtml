@using TravelTripProje1.Models.Sınıflar
@model  List<Blog> 
@foreach (var item in Model)
{


    <div class="right img-abd img-eight">
        <div class="bot-left " style=" box-shadow: none; ">
            <img src="@item.BlogImage" class="img-abd-kaplama" @*style="width:350px;height:190px"*@ alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Baslik</h4>
            <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama.Substring(0, 120)...</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını oku</span></a></p>
        </div>
    </div>
}