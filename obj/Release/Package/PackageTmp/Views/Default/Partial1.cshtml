@using TravelTripProje1.Models.Sınıflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left img-abd img-eight">
            <div class="bot-left" style=" box-shadow: none; ">
                <img src=@x.BlogImage class="img-abd-kaplama" @*style="width:350px;height:190px"*@ alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@x.Aciklama.Substring(0,100)...</p>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını oku</span></a></p>
            </div>
        </div>
    }
